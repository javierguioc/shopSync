{
  "name": "shopsync",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "cd apps/backend && nodemon",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "turbo run build"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "turbo": "^2.0.6"
  },
  "packageManager": "npm@9.5.1"
}
